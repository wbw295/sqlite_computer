    </LinearLayout>

    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="#666"
        android:text="add" />

    <Button
        android:id="@+id/button2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginTop="10dip"
        android:background="#666"
        android:text="query" />

